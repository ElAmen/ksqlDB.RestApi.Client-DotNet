    <LangVersion>9.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- <PackageReference Include="ksqlDB.RestApi.Client" Version="1.6.0-rc.1" /> -->
    <ProjectReference Include="..\..\ksqlDb.RestApi.Client\ksqlDb.RestApi.Client.csproj" />
